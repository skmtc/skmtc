{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build-deployment-files": {
      "cache": false,
      "outputs": ["apps/web/app/reapit-files.json", "apps/web/app/reapit-download.json"]
    },
    "vscode:build": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "types": {
      "dependsOn": ["^types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
